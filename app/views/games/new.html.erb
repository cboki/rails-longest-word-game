<div class="container">

<h1>New game</h1>
<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item"><%= letter %></li>
    <% end %>
</ul>
<form action="/score" method="post" class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
  <input type="text" name="guess" placeholder="Type here the longest word">

  <input type="submit" class="btn btn-primary">
</form>
</div>
